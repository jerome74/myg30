<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/bg_title">
	<Button  
		android:id="@+id/title_confirm"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:background="@drawable/abs__ic_menu_moreoverflow_normal_holo_dark"/>
	<Button  
		android:id="@+id/search_item"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:background="@drawable/abs__ic_search"/>
	<TextView  
		android:id="@+id/title_title"
	    android:layout_width="0dip" 
	    android:layout_height="fill_parent" 
	    android:layout_weight="1"
	    android:gravity="center"
	    android:text=""
	    android:textColor="@color/btn_text"/>
	<Button  
		android:id="@+id/title_power"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:background="@drawable/close_button2"/>
</LinearLayout>
