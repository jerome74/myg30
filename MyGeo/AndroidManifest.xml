<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.mygeo.project"
    android:versionCode="1"
    android:versionName="1.0" >

     <uses-sdk android:minSdkVersion="15" />
     
      	<uses-permission android:name="android.permission.WAKE_LOCK"/>
    	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
      	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:icon="@drawable/internet"
        android:label="@string/app_name" >
        <activity
            android:name="it.mygeo.project.activities.SplashActivity"
            android:label="My G30"
            android:theme="@style/Theme.Blue" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
             android:name="it.mygeo.project.activities.ActivityListArray"
             android:theme="@style/NoTitleBarDialog" />
        
         <activity
             android:name="it.mygeo.project.activities.SeekActivity"
             android:theme="@style/NoTitleBarDialog" />
        
        <activity
            android:name="it.mygeo.project.activities.MyGeoActivity"
           android:theme="@style/Theme.Blue" />
        <activity
            android:name="it.mygeo.project.activities.StylePreferenceActivity"
            android:theme="@style/Theme.Blue" />
        
        <service android:exported="false" android:enabled="true" android:name="it.mygeo.project.service.domain.ConnService"></service>
        <service android:exported="false" android:enabled="true" android:name="it.mygeo.project.service.ServiceManager"></service>
  		
        <service android:name="it.mygeo.project.service.domain.CatchToastService" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
        
       <receiver android:name=".service.alert.signal.ConnAlarmSignal" android:process=":remote" />
        
       
       
    </application>

   

</manifest>